<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userApp.activity.LoginActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_scond">

            <RelativeLayout
                android:id="@+id/rlMainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:gravity="center"
                android:orientation="vertical">

                <com.example.gameapplication.userApp.utlis.SpumanteRegularShadow
                    android:id="@+id/tvNamefirst"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="-20dp"
                    android:gravity="top"
                    android:text="Chips"
                    android:textColor="@color/text_black"
                    android:textSize="40sp" />

                <com.example.gameapplication.userApp.utlis.SpumanteRegularShadow
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvNamefirst"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="-30dp"
                    android:text="Betting Game"
                    android:textColor="@color/text_black"
                    android:textSize="45sp" />


                <LinearLayout
                    android:id="@+id/ll_mainlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvName"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/etUserId"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/shap_rounded"
                        android:hint="User Id"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:maxLength="20"
                        android:paddingLeft="20dp" />


                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/shap_rounded"
                        android:hint="password"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:paddingLeft="20dp"
                        android:textSize="18sp"/>

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:id="@+id/tvLogin"
                        android:layout_width="170dp"
                        android:layout_height="48dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/shap_roundeds"
                        android:gravity="center"
                        android:text="LOGIN"
                        android:textColor="@color/text_black"
                        android:clickable="true"
                        android:textSize="22sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </FrameLayout>
</LinearLayout>