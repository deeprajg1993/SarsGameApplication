<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|bottom"
        android:src="@drawable/bg_dashboard" />

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="-5dp"
            android:layout_marginRight="-10dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/shapbs">

            <com.example.gameapplication.userApp.utlis.SpumanteRegularShadow
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_gravity="center"
                android:layout_marginBottom="0dp"
                android:background="@drawable/circle_shap"
                android:gravity="center"
                android:paddingTop="30dp"
                android:text="Add User"
                android:textColor="@color/text_black"
                android:textSize="40sp"
                android:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_main"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_UserName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shap_rounded"
            android:hint="User Id"
            android:imeOptions="actionNext"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shap_rounded"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/etAddChips"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shap_rounded"
            android:hint="Add Chips"
            android:inputType="number"
            android:maxLines="1"
            android:paddingLeft="20dp"
            android:singleLine="true" />

        <com.example.gameapplication.userApp.utlis.SegoeUIBold
            android:id="@+id/tvCreateUser"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shap_rounded"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/text_black"
            android:text="CREATE USER"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>