<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.gameapplication.userApp.utlis.SpumanteRegularShadow
           android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Akash1524"
            android:textColor="@color/text_black"
            android:textSize="45sp" />

        <com.example.gameapplication.userApp.utlis.SegoeUIBold
            android:id="@+id/tvChipsPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:text="Avial Balance (300)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.gameapplication.userApp.utlis.SegoeUIBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="USER ACTION"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Betting Block"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/bettingBlock"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textOff="No"
                        android:textOn="Yes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="User Block"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/UserBlock"
                        android:layout_width="0dp"
                        android:layout_height="47dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textOff="No"
                        android:textOn="Yes" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Account Deactivate"
                        android:textColor="@color/text_black"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/AccountDeactivate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:textOff="No"
                        android:textOn="Yes" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.85"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:id="@+id/tvaddUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:textColor="@color/text_black"
                        android:text="Change Password"
                        android:textSize="18sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivRightArrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.14"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/right_arrows"
                    android:text="100"
                    android:textColor="#00a241"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:elevation="2dp"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.85"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.example.gameapplication.userApp.utlis.SegoeUIBold
                        android:id="@+id/tvLoss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="Profit &amp; Loss"
                        android:textColor="@color/text_black"
                        android:textSize="18sp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.14"
                    android:gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/right_arrows"
                    android:text="100"
                    android:textColor="#00a241"
                    android:textSize="16sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>